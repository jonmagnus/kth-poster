% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=black}
\setbeamercolor{palette secondary}{fg=black}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=kthblue}

% Headline
\setbeamercolor{headline}{fg=navy}
\setbeamercolor{headline author}{fg=kthblue}
\setbeamercolor{headline institute}{fg=skyblue}

% Footer
\setbeamercolor{footer}{fg=kthblue}

% Block
\setbeamercolor{block title}{fg=navy}
\setbeamercolor{block separator}{bg=black}
\setbeamercolor{block body}{fg=black}

% Alert Block
\setbeamercolor{block alerted title}{fg=navy,bg=lightblue}
\setbeamercolor{block alerted separator}{bg=black}
\setbeamercolor{block alerted body}{fg=black,bg=lightblue}

% Example Block
\setbeamercolor{block example title}{fg=navy,bg=sand}
\setbeamercolor{block example separator}{bg=navy}
\setbeamercolor{block example body}{fg=black,bg=sand}

% Heading
\setbeamercolor{heading}{fg=navy}

% Itemize
\setbeamercolor{item}{fg=navy}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}
